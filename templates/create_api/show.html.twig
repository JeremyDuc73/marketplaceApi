{% extends 'base.html.twig' %}

{% block title %}Hello CreateApiController!{% endblock %}

{% block body %}
    <main class="container">
        <div class="row">
            <h3>{{ createdApi.name }}</h3>
        </div>
        <div class="row">
            {{ createdApi.description }}
        </div>
        <div class="row">
            <div class="mt-3 col-4">
                <p>Price : {{ createdApi.price }}</p>
            </div>
            <div class="mt-3 col-4">
                <p>Request ammout for {{ createdApi.price }} â‚¬ : {{ createdApi.requestAmountPerSale }}</p>
            </div>
            {% if app.user.profile.purchasedApis is not empty %}
                {% for purchasedApi in app.user.profile.purchasedApis %}
                    {% if purchasedApi.linkApi == createdApi %}
                        <p>You already have a key for this API</p>
                    {% else %}
                        <div class="mt-3 col-4">
                            <a href="#" class="btn btn-primary">Buy</a>
                        </div>
                    {% endif %}
                {% endfor %}
            {% else %}
                <div class="mt-3 col-4">
                    <a href="#" class="btn btn-primary">Buy</a>
                </div>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-6">
                <h4>Documentation</h4>
                {{ createdApi.docLink }}
            </div>
            <div class="col-6">
                <h4>Autres truc a ajouter</h4>
            </div>
        </div>
    </main>
{% endblock %}
