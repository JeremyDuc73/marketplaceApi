{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block javascripts %}
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe('{{ STRIPE_PUBLIC_KEY }}'); // Vérifie que cette variable est définie
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", ()=>{
            document.getElementById('create-payment-link').addEventListener('click', async () => {
                const response = await fetch('/createpaymentlink');
                const data = await response.json();
                window.location.href = data.url;
            });
        })
    </script>
{% endblock %}

{% block body %}
    
    <div class="m-5">
        {% if cart|length > 0 %}
            {% for item in cart %}
                <div class="row">
                    <div class="col-2">{{ item.createdApi.name }}</div>
                    <div class="col-2">{{ item.createdApi.description }}</div>
                    <div class="col-2">{{ item.createdApi.price }} €</div>
                    <div class="col-2">{{ item.createdApi.requestAmountPerSale }}</div>
                    <div class="col-2">{{ item.quantity }}</div>
                    <div class="col-2">
                        <div class="row">
                            <div class="col-4"><a href="{{ path('app_cart_add_one_to_cart', {id:item.createdApi.id}) }}" class="btn btn-success">+</a></div>
                            <div class="col-4"><a href="{{ path('app_cart_remove_one_from_cart', {id:item.createdApi.id}) }}" class="btn btn-danger">-</a></div>
                            <div class="col-4"><a href="{{ path('app_cart_remove_row', {id:item.createdApi.id}) }}" class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                                    </svg></a></div>
                        </div>
                    </div>
                </div>
                <hr>
            {% endfor %}
            <button class="btn btn-success" id="create-payment-link">Générer un lien stripe</button>
        {% else %}
            <a href="{{ path('app_home') }}" class="m-3 btn btn-success">Ajouter des api au panier</a>
        {% endif %}
    </div>
{% endblock %}
