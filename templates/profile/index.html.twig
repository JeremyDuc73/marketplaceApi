{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <main class="container">
        <h1 class="mt-5 mb-5">Your profile</h1>
        <div class="mt-5 mb-5">
            <h4>Purchased APIS :</h4>
            {% if purchasedApis is not empty %}
                {% for purchasedApi in purchasedApis %}
                    <div class="card mt-2 mb-2">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-0">{{ purchasedApi.linkApi.name }}</h5>
                                <p class="mb-0">Requests remaining : {{ purchasedApi.remainingRequests }}</p>
                            </div>
                            {% if not purchasedApi.isApiKeyGenerated %}
                                <a class="btn btn-success" href="{{ path('app_purchased_api_generate_api_key', {id:purchasedApi.id}) }}">GENERATE API KEY</a>
                            {% else %}
                                <div>
                                    <a class="btn btn-success" href="{{ path('app_purchased_api_generate_new_api_key', {id:purchasedApi.id}) }}">GENERATE A NEW API KEY</a>
                                    <a class="btn btn-danger" href="{{ path('app_purchased_api_delete_api_key', {id:purchasedApi.id}) }}">DELETE API KEY</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>You did not buy any API yet</p>
            {% endif %}
        </div>
        <a class="mt-4 mb-3 btn btn-primary" href="{{ path('app_create_api') }}">ADD AN API</a>
        <div>
            <h4>Added APIS : </h4>
            {% if createdApis is not empty %}
                {% for createdApi in createdApis %}
                    <div class="card mt-2 mb-2">
                        <div class="card-body">
                            <h5 class="card-title">{{ createdApi.name }}</h5>
                            <a href="{{ createdApi.docLink }}" class="card-link">documentation</a>
                            <p class="card-text">{{ createdApi.description }}</p>
                            <a href="{{ path('app_edit_api', {id:createdApi.id}) }}" class="btn btn-warning">EDIT</a>
                            <a href="#" class="btn btn-danger">DELETE</a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>You did not add any API yet</p>
            {% endif %}
        </div>
    </main>
{% endblock %}
